---
name: ChatFAQ

databases:
  - name: psql
    cluster_name: "chatfaq-psql-dev"
    db_name: "{{ deployment_key }}"
    db_user: "{{ deployment_key }}"
    engine: pg
    version: "15"

env:
  - name: sentry
    variables:
      SENTRY_DSN: '{{ secret("SENTRY_DSN") }}'
  - name: django
    variables:
      BASE_URL: '{{ APP_URL }}'
      SECRET_KEY: '{{ secret("SECRET_KEY") }}'
      SENTRY_ENVIRONMENT: "{{ back.component_key }}"
      ENVIRONMENT: "{{ back.component_key }}"
      DATABASE_URL: "{{ psql.DATABASE_URL }}"
  - name: widget
    variables:
      SENTRY_ENVIRONMENT: "{{ widget.component_key }}"
      CHATFAQ_BACKEND_API: "{{ APP_URL }}"
      CHATFAQ_BACKEND_WS: "wss://{{ APP_DOMAIN }}"
  - name: sdk
    variables:
      SENTRY_ENVIRONMENT: "{{ sdk.component_key }}"
      CHATFAQ_BACKEND_WS: "wss://{{ APP_DOMAIN }}"
      CHATFAQ_BACKEND_EMAIL: '{{ get("CHATFAQ_BACKEND_EMAIL") }}'
      CHATFAQ_BACKEND_PASSWORD: '{{ secret("CHATFAQ_BACKEND_PASSWORD") }}'

images:
  - name: widget
    build_context: widget
  - name: back
    build_context: back
  - name: sdk
    build_context: sdk

services:
  - name: widget
    image: widget
    envs: [ sentry, widget ]
    instance_size: XXS
    port: 3000
  - name: back
    image: back
    envs: [ sentry, django ]
    instance_size: XXS
    port: 8000
    route_prefixes:
      - "/back"

workers:
  - name: fsm_example
    image: sdk
    envs: [ sentry, sdk ]
    instance_size: XXS

jobs:
  - name: migrate
    when: PRE_DEPLOY
    image: back
    envs: [ sentry, django ]
    command: modelw-docker run python manage.py migrate
    instance_size: XXS

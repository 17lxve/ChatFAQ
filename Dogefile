---
name: ChatFAQ

databases:
  - name: psql
    cluster_name: "chatfaq-psql-dev"
    db_name: "{{ deployment_key }}"
    db_user: "{{ deployment_key }}"
    engine: pg
    version: "15"

env:
  - name: sentry
    variables:
      SENTRY_DSN: '{{ secret("SENTRY_DSN") }}'
  - name: django
    variables:
      BASE_URL: '{{ APP_URL }}'
      SECRET_KEY: '{{ secret("SECRET_KEY") }}'
      SENTRY_ENVIRONMENT: "{{ back.component_key }}"
      ENVIRONMENT: "{{ back.component_key }}"
      DATABASE_URL: "{{ psql.DATABASE_URL }}"
  - name: widget
    variables:
      SENTRY_ENVIRONMENT: "{{ widget.component_key }}"
      CHATFAQ_BACKEND_API: "{{ $APP_URL }}"
      CHATFAQ_BACKEND_WS: "{{ $APP_URL }}"

images:
  - name: widget
    build_context: widget
  - name: back
    build_context: back

services:
  - name: widget
    image: widget
    envs: [ sentry, widget ]
    instance_size: XXS
    port: 3000
  - name: back
    image: back
    envs: [sentry, django]
    instance_size: XXS
    port: 8000
    route_prefixes:
      - "/back"

jobs:
  - name: migrate
    when: PRE_DEPLOY
    image: back
    envs: [ sentry, django ]
    command: modelw-docker run python manage.py migrate
    instance_size: XXS
